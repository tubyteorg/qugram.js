    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./lib/esm",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
